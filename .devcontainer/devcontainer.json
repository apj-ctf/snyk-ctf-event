{
  "name": "Snyk CTF Codespaces Environment",
  "image": "mcr.microsoft.com/devcontainers/java:1-21-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/java:1": {
      "version": "none",
      "installMaven": "true",
      "installGradle": "false"
    },
    "ghcr.io/devcontainers-contrib/features/snyk-cli:latest": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "snyk-security.snyk-vulnerability-scanner",
        "humao.rest-client",
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "Postman.postman"
      ],
      "settings": {
        "workbench.colorTheme": "Default Dark+",
        "workbench.startupEditor": "none",
        "security.workspace.trust.enabled": false,
        "snyk.trustedFolders": [
          "/workspaces/snyk-ctf-event"
        ],
        "snyk.features.codeQuality": false,
        "snyk.advanced.automaticDependencyManagement": true,
        "snyk.scanningMode": "auto",
        "snyk.advanced.autoScanOpenSourceSecurity": true,
        "snyk.yesWelcomeNotification": false,
        "snyk.advanced.authenticationMethod": "Token authentication"
      }
    }
  },
//  "forwardPorts": [27017, 8080, 8000, 5000],
  "remoteUser": "vscode"
}
