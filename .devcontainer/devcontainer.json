{
  "name": "Snyk CTF Codespaces Environment",
  "customizations": {
    "vscode": {
      "extensions": [
        "snyk-security.snyk-vulnerability-scanner",
        "postman.postman-for-vscode"
      ],
      "settings": {
        "workbench.colorTheme": "Default Dark+",
        "workbench.startupEditor": "none",
        "security.workspace.trust.enabled": false,
        "snyk.trustedFolders": [
          "/workspaces/snyk-ctf-event"
        ],
        "snyk.advanced.automaticDependencyManagement": true,
        "snyk.scanningMode": "auto",
        "snyk.advanced.autoScanOpenSourceSecurity": true,
        "snyk.yesWelcomeNotification": false,
        "snyk.advanced.authenticationMethod": "API Token (Legacy)"
      }
    }
  },
  "postCreateCommand": "git submodule update --init --recursive && npm install snyk -g",
  "remoteUser": "vscode"
}
